<script language="JavaScript" type="text/javascript">
    function clickmenu(btn) {
        var submenus = getElementsByClass("sub");
        var thesub = getElementsByClass("sub", btn);
        var display = false;
        if (thesub.length)
            if (thesub[0].style.display == "none")
                display = true;

        for (var i = 0; i < submenus.length; i++)//reset menus
            submenus[i].style.display = "none"

        if (display) {
            thesub[0].style.display = "";
            makemenu(btn);
        }
        else
            makemenu(window);
    }
    addEvent(window, 'load', makemenu);

    function makemenu(btn) {
        var iBtns = getElementsByClass("menubutton").length;
        var high = iBtns * 38; //34 button height + 4 spacer
        var subhigh = 0;
        if (btn.className)//small check to catch if its not a window load
            subhigh = getElementsByClass("submenubutton", btn).length * 24; //24 pixels each

        $("back").height = high + subhigh;
        $("menumiddle").style.top = -(high + subhigh) + "px";
        $("menu").style.height = high + subhigh + 124 - 30 + "px";
    }
</script>
